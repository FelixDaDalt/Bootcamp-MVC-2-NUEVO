@model Bootcamp_MVC_2_NUEVO.Models.Home;
@{
    ViewData["Title"] = "Editar Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
    </div>
}
<form method="post" asp-action="Editar" asp-controller="EditHome">
     <input type="hidden" asp-for="Id"/>
    <div class="form-group">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="Titulo"></label>
    <input asp-for="Titulo" class="form-control" placeholder="Titulo">
     <span asp-validation-for="Titulo" class="text-danger"></span>
  </div>

    <div class="form-group">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <label asp-for="Descripcion"></label>
    <input asp-for="Descripcion" class="form-control" placeholder="Descripcion">
     <span asp-validation-for="Descripcion" class="text-danger"></span>
  </div>

      <div class="form-group">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       <label asp-for="Logo"></label>
       <input asp-for="Logo" class="form-control" placeholder="Logo">
        <span asp-validation-for="Logo" class="text-danger"></span>
      </div>
       <div class="form-group">
     <button type="submit" class="btn btn-primary">Confirmar</button>
</div>
</form>

@section scripts{
    @{<partial name="_validationScriptsPartial"/>}
}

